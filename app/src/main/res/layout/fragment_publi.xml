<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout7"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".ui.fragments.PubliFragment">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/publi_title_input"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/dogNameId"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_radius"
        android:backgroundTint="@color/white"
        android:hint="@string/publi_name_input"
        android:inputType="text"
        android:textAlignment="textStart"
        android:textColorHint="@color/gris" />

    <EditText
        android:id="@+id/dogAgeId"
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/background_radius"
        android:backgroundTint="@color/white"
        android:hint="@string/publi_age_input"
        android:inputType="text"
        android:textAlignment="textStart"
        android:textColorHint="@color/gris" />


    <EditText
        android:id="@+id/dogWeigthId"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/background_radius"
        android:backgroundTint="@color/white"
        android:hint="@string/publi_weigth_input"
        android:inputType="text"
        android:textAlignment="textStart"
        android:textColorHint="@color/gris" />

    <EditText
        android:id="@+id/dogPhoneId"
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/background_radius"
        android:backgroundTint="@color/white"
        android:hint="@string/publi_phone_input"
        android:inputType="text"
        android:textAlignment="textStart"
        android:textColorHint="@color/gris" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/publi_gender_input" />

    <Spinner
        android:id="@+id/dogGenderId"
        android:layout_width="364dp"
        android:layout_height="51dp"
        android:layout_margin="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/background_radius"
        android:backgroundTint="#FFFFFF"
        android:spinnerMode="dropdown" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/publi_breed_input" />

    <Spinner
        android:id="@+id/dogBreedId"
        android:layout_width="364dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/background_radius"
        android:backgroundTint="#FFFFFF"
        android:spinnerMode="dropdown" />

    <Button
        android:id="@+id/dogPublishButtonId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/purple"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/publi_breed_button"
        android:textAlignment="center" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />


</LinearLayout>